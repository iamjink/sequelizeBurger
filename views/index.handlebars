<div class="container">
    <h1>EatDaBurger!</h1>

</div>

<div class="container">
    <div class="row">
        <div class="col-sm">
            <img class="bgImage" src="/assets/images/asset_05.png">
        </div>
        <div class="col-sm">
            <img class="bgImage" src="/assets/images/asset.png">
        </div>
        <div class="col-sm">
            <img class="bgImage" src="/assets/images/Asset_04.png">
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm">
            <h5>Burger Menu</h5>{{#each burgers}}
            {{#unless this.devoured}}
            <ul>
                <li>
                    <script>
                        $(function () {
                            $('[data-toggle="popover"]').popover()
                        })
                    </script>
                    <button data-toggle="popover" data-placement="right" data-html="true"
                        data-title='Devour This Burger?' data-content='
                                <form id="customer" action="/update/{{this.id}}?_method=PUT" method="POST">
                                    <div class="form-group">
                                        <input name="customer_devoured" value="1" type="number" style="display:none;">
                                        <input name="customer_name" type="text" class="form-control" placeholder="Enter Your Name">
                                        <button type="submit">Devour</button>
                                    </div>
                                </form>' class="not-devoured">{{burger_name}}</button>

                </li>
            </ul>
            {{/unless}}
            {{/each}}
        </div>

        <div class="col-sm">
            <h5>Add a Burger!</h5>
            <form id="burger-form" action="/burgers" method="POST">
                <div class="form-group">
                    <input type="text" name="burger_name" placeholder="Enter name of burger" id="burger-name"
                        maxlength="40" placeholder="Enter burger name">
                    <button type="submit">Enter Your Burger!</button>
                </div>
            </form>
        </div>
        <div class="col-sm">
            <h5>Yum!! Would You Like Another Burger?</h5>
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <p>{{this.burger_name}} eaten by {{Customer.name}}</p>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>